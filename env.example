# Helius API Key for Solana blockchain access
NEXT_PUBLIC_HELIUS_API_KEY=your_helius_api_key

# Solana RPC URL (Use a reliable provider for production)
NEXT_PUBLIC_RPC_URL=https://api.mainnet-beta.solana.com

# WebSocket endpoint for real-time updates
NEXT_PUBLIC_WS_ENDPOINT=wss://api.mainnet-beta.solana.com

# Trade configuration
NEXT_PUBLIC_DEFAULT_TRADE_AMOUNT=0.1
NEXT_PUBLIC_MAX_SLIPPAGE=5

# Webhook server port
WEBHOOK_SERVER_PORT=3001

# Optional puppeteer configuration
PUPPETEER_EXECUTABLE_PATH=/path/to/chrome  # Optional
